{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "global-require":"warn",
        
        "quotes": [
            "error",
            "single",
			{"avoidEscape": true, "allowTemplateLiterals": true}
        ],
		"semi": [
		    "warn",
			"always"
		],
		"indent": [
		    "error",
			4
		]
    }
}